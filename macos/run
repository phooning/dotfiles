#!/usr/bin/env bash

GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'
BOLD='\033[1m'
UNDERLINE='\033[4m'

declare -a PACKAGES=(
  vim
  tmux
  neovim
  fzf
  jq
  cmus
  dust
  exa
  fd
  htop
  neofetch
  xsv
  ffmpeg
  cmake
  irssi
  postgresql
  ttyplot
)

declare -a CASK_PACKAGES=(
  # logisim
  # inkscape
  # tor-browser
  # gimp
  # cog
  # ghidra
  # arduino
  # balenaetcher
  # mullvadvpn
  qlvideo
  alacritty
  discord
  firefox
  google-chrome
  iterm2
  keepassxc
  kitty
  rectangle
  raycast
  skim
  vscodium
)

# Install packages
for package in "${PACKAGES[@]}"; do
  brew list $package && echo -e "${RED}${BOLD}$package already installed${NC}" \
    || (brew install $package && echo -e "${GREEN}${BOLD}Installing $package${NC}")
done

# Install cask packages
for package in "${CASK_PACKAGES[@]}"; do
  brew list $package && echo -e "${RED}${BOLD}$package already installed${NC}" \
    || (brew install --cask $package && echo -e "${GREEN}${BOLD}Installing $package${NC}")
done

brew upgrade

exit 0
