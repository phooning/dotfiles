set nocompatible
filetype plugin indent on

set number
syntax enable
set noswapfile
set nowrap
set ai
set ruler
set hidden
set autoindent
set updatetime=50
set scrolloff=0
set tabstop=2
set softtabstop=2
set shiftwidth=2
set smarttab
set expandtab
set autoread
set lazyredraw
set ttyfast
set bs=2
set encoding=utf-8
set hlsearch
set incsearch
set ignorecase
set smartcase

highlight Comment ctermfg=green
